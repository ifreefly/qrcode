<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 <appenders>
  <Console name="Console" target="SYSTEM_OUT">
   <PatternLayout pattern="%d{HH:mm:ss} [%C location is %L line] %-5level %logger{36} - %msg %ex%n" />
  </Console>
 </appenders>
 <Loggers>
  <Logger name="yourLogger" level="debug" additivity="false">
   <AppenderRef ref="Console" />
  </Logger>
  <Root level="debug">
   <AppenderRef ref="Console" />
  </Root>
 </Loggers>
</configuration>